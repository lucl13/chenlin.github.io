	file = {Peng et al. - 2021 - A distal regulatory strategy of enzymes from loca.pdf:/Users/chenlin/Library/CloudStorage/OneDrive-Personal/Zotero_lib/storage/S7LNSAL3/Peng et al. - 2021 - A distal regulatory strategy of enzymes from loca.pdf:application/pdf},
