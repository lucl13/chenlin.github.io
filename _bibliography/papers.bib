	file = {d1cp01828k1.pdf:/Users/chenlin/Library/CloudStorage/OneDrive-Personal/Zotero_lib/storage/KYK35WQL/d1cp01828k1.pdf:application/pdf;Peng et al. - 2021 - The synergistic mechanisms of apo-ferritin structu.pdf:/Users/chenlin/Library/CloudStorage/OneDrive-Personal/Zotero_lib/storage/MUVATJF4/Peng et al. - 2021 - The synergistic mechanisms of apo-ferritin structu.pdf:application/pdf},
}

@article{lu_global_2020,
	title = {Global and {Kinetic} {Profiles} of {Substrate} {Diffusion} in \textit{{Candida} antarctica} {Lipase} {B}: {Molecular} {Dynamics} with the {Markov}-{State} {Model}},
