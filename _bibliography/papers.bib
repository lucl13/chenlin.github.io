	file = {Full Text PDF:/Users/chenlin/Library/CloudStorage/OneDrive-Personal/Zotero_lib/storage/V4TXJPXE/Wells et al. - 2025 - Conserved energetic changes drive function in an ancient protein fold.pdf:application/pdf},
